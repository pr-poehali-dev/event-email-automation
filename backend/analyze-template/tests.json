{
  "tests": [
    {
      "name": "Analyze HTML template",
      "method": "POST",
      "path": "/",
      "body": {
        "html_content": "<h1>Вебинар по продажам</h1><p>Узнайте секреты успешных продаж</p>"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "template_html": "string",
        "variables": "array",
        "variables_count": "number"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing html_content",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "html_content is required"
      }
    },
    {
      "name": "OPTIONS request",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    }
  ]
}
